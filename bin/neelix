#! /usr/bin/ruby

require 'neelix'
app = Neelix.new

# Establish database connection 
# (TODO: if file doesn't exist create it using data/neelix/create.sql)
dbfile = ENV['HOME']+'/.neelix/db'
dbfile = ARGV[0] unless ARGV.empty?
app.open(dbfile)

if $0 == __FILE__
  require 'neelix/view/qt'
  a = Qt::Application.new(ARGV)
  w = NeelixMainWindow.new
  a.mainWidget = w
  w.show
  a.exec
end
